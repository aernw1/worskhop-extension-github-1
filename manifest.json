{
    "manifest_version": 3,
    "name": "GitHub File Icons",
    "version": "1.0",
    "description": "Adds visual icons for different file types in GitHub's repository explorer",
    "permissions": [
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["*://github.com/*"],
        "js": ["js/content.js"],
        "css": ["css/styles.css"]
      }
    ],
    "web_accessible_resources": [{
      "resources": ["icons/*"],
      "matches": ["https://github.com/*"]
    }],
    "icons": {
      "128": "icons/extension-icon128.png"
    }
}